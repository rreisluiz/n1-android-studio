<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/mainBackground"
    tools:context=".FormularioSaborPizza">

    <TextView
        android:id="@+id/txtTituloFinalPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:text="@string/txt_pedidoFinalizado" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/completed" />

    <TextView
        android:id="@+id/txtSaborPizza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonBackground"
        android:ems="10"
        android:padding="10dp"
        android:maxLines="1"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:text="..." />

    <TextView
        android:id="@+id/txtTamanhoPizza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonBackground"
        android:ems="10"
        android:padding="10dp"
        android:maxLines="1"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:text="..." />

    <TextView
        android:id="@+id/txtMetodoPagamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonBackground"
        android:ems="10"
        android:padding="10dp"
        android:maxLines="1"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:text="..." />

    <TextView
        android:id="@+id/txtValorTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonBackground"
        android:ems="10"
        android:padding="10dp"
        android:maxLines="1"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:text="..." />

    <Button
        android:id="@+id/btnVoltarMenuPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/buttonBackground"
        android:textColor="@color/black"
        app:cornerRadius="10dp"
        android:text="@string/txt_btnVoltarMenuPrincipal" />

</LinearLayout>